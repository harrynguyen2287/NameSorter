  <ItemGroup>
    <ProjectReference Include="..\NameSorter.Core\NameSorter.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
